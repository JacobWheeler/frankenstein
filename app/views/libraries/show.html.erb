<h1>Welcome to the Movie Library!!</h1>

<table>
<thead>
    <tr>
        <h3><%= @library.title %> </h3>
    </tr>
    <br />
</thead>
<tbody>
    <% @movies.each do |movie| %>
        <ul>
            <li> <%= movie.title %> </li>
            <%= link_to 'Movie Details', library_movie_path(@library, movie), class: 'btn' %>
            <%= button_to 'Delete Movie', library_movie_path(@library, movie[:id]), method: :destroy %>
        </ul>
    <% end %>
    <%= link_to 'Add Movies!!', library_movies_path(@library)%>
</tbody>
</table>